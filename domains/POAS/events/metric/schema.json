{
  "$id": "https://opg.service.justice.gov.uk/opg.poas.makeregister/metric.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "opg.poas.makeregister/metric",
  "type": "object",
  "properties": {
    "Subcategory": {
      "type": "string",
      "description": "Assign metric a Subcategory (Optional)"
      // "pattern": "^[a-zA-Z-_0-9]{1,25}$"
    },
    "Environment": {
      "type": "string",
      "description": "Sets the environment the metric has come from (Optional)"
      // "pattern": "^[a-zA-Z-_0-9]{1,25}$"
    },
    "MeasureName": {
      "type": "string",
      "description": "The metric name"
      // "pattern": "^[a-zA-Z-_0-9]{1,64}$"
    },
    "MeasureValue": {
      "type": "string",
      "description": "The metric value",
      "pattern": "^[0-9]{1,20}$"
    },
    "MeasureValueType": {
      "type": "string",
      "description": "The metric value type",
      "enum": ["DOUBLE", "BIGINT", "VARCHAR", "BOOLEAN"]
    },
    "Time": {
      "type": "string",
      "description": "The type of LPA being created",
      "pattern": "^[0-9]{13}$"
    }
  },
  "required": ["Subcategory", "Environment", "MeasureName", "MeasureValue", "Time"]
}
