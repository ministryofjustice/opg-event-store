<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="theme-color" content="#0b0c0c">
    
    <link rel="preload" href="{{ '/assets/fonts/light-94a07e06a1-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/fonts/bold-b542beb274-v2.woff2' | url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ '/assets/styles.css' | url }}" rel="stylesheet" as="style">

    <link rel="shortcut icon" href="{{ '/assets/images/favicon.ico' | url }}" type="image/x-icon">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-180x180.png' | url }}" sizes="180x180">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-167x167.png' | url }}" sizes="167x167">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon-152x152.png' | url }}" sizes="152x152">
    <link rel="apple-touch-icon" href="{{ '/assets/images/moj-apple-touch-icon.png' | url }}">

    <meta name="description" content="{{site.description}}">
    <meta property="og:image" content="{{ '/assets/images/moj-opengraph-image.png' | url }}">

    <link href="{{ '/assets/styles.css' | url }}" rel="stylesheet">
    <script src="{{ '/assets/index.js' | url }}" defer></script>
    <title>{{ title }} - {{site.name}}</title>
  </head>
  <body class="govuk-template__body">
    {%- from "../macros/header.njk" import govukHeader %}
    {%- from "../macros/footer.njk" import govukFooter %}
    {%- from "../../../node_modules/govuk-frontend/dist/govuk/components/skip-link/macro.njk" import govukSkipLink %}
    {%- from "../../../node_modules/govuk-frontend/dist/govuk/components/back-link/macro.njk" import govukBackLink %}
    {{ govukSkipLink({
      text: "Skip to main content",
      href: "#content"
    }) }}
    {% block body %}
      <div>
        {% from "../../../node_modules/govuk-frontend/dist/govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

        {% set acceptHtml %}
          <p class="govuk-body">You’ve accepted additional cookies. You can <a class="govuk-link" href="/view-cookies">change your cookie settings</a> at any time.</p>
        {% endset %}

        {% set rejectHtml %}
          <p class="govuk-body">You’ve rejected analytics cookies. You can <a class="govuk-link" href="/view-cookies">change your cookie settings</a> at any time.</p>
        {% endset %}

        {% set html %}
          <p class="govuk-body">We’d like to use analytics cookies so we can understand how you use the service and make improvements.</p>
        {% endset %}

        {{ govukCookieBanner({
          ariaLabel: "Cookies on "+site.name,
          classes: "js-cookie-banner-confirm",
          hidden: true,
          messages: [
            {
              html: acceptHtml,
              actions: [
              {
                text: "Hide this message",
                type: "button",
                name: "cookies",
                value: "hide"
              }
              ]
            }
          ]
        }) }}

        {{ govukCookieBanner({
          ariaLabel: "Cookies on "+site.name,
          classes: "js-cookie-banner-reject",
          hidden: true,
          messages: [
            {
              html: rejectHtml,
              actions: [
              {
                text: "Hide this message",
                type: "button",
                name: "cookies",
                value: "hide"
              }
              ]
            }
          ]
        }) }}

        {{ govukCookieBanner({
          ariaLabel: "Cookies on "+site.name,
          classes: "js-cookie-banner",
          messages: [
            {
              headingText: "Cookies on "+site.name,
              html: html,
              actions: [
                {
                  text: "Accept analytics cookies",
                  type: "button",
                  name: "cookies",
                  value: "accept"
                },
                {
                  text: "Reject analytics cookies",
                  type: "button",
                  name: "cookies",
                  value: "reject"
                },
                {
                  text: "View cookies",
                  href: "/view-cookies"
                }
              ]
            }
          ]
        }) }}

        {{ govukHeader({
            homepageUrl: "/",
            serviceName: site.name,
            serviceUrl: "/",
            phase: site.phase,
            navigation: []
          })
        }}

        {% block content %}
        <div id="content" class="govuk-width-container">

          {% if backLink %}
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">
                {{ govukBackLink({
                  text: "Back",
                  href: (backLink)
                }) }}
              </div>
            </div>
          {% endif %}

          <main class="govuk-main-wrapper" role="main">

            {{ content | safe }}
            
          </main>
        </div>
        {% endblock %}

        {{ govukFooter({
            meta: {
              items: [
                {
                  href: "/view-cookies/",
                  text: "Cookies"
                }
              ]
            }
          }) 
        }}

      </div>
    {% endblock %}
  </body>
</html>